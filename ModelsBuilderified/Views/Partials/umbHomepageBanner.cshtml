@inherits UmbracoViewPage<IBanner>

@if (Model.BannerIsVisible)
{
    <!-- Banner -->
    <div id="banner-wrapper" style="background: url('@Model.BannerBackgroundImage') center center no-repeat;">
        <section id="banner">
            <h2>@Model.BannerHeader</h2>
            <span class="byline">@Model.BannerSubheader</span>
			@if(Model.BannerLink != null)
			{
            	<a href="@Model.BannerLink.Url" class="button">@Model.BannerLinkText</a>
            }
        </section>
    </div>
    <!-- /Banner -->
}